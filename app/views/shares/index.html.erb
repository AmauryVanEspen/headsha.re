<div class="row">

  <% if @shares.empty? %>

    <p>You haven't shared anything yet.</p>

    <%= link_to "Share something!", new_share_path, class: :button %>

  <% else %>

    <div class="right" style="margin-top: 8px">
      <%= link_to "Share something!", new_share_path, class: :button %>
    </div>

    <h1>My links</h1>

    <table width="100%">
      <thead>
        <tr>
          <th>Shared URL</th>
          <th>Message</th>
          <th>Views</th>
          <th></th>
        </tr>
      </thead>

      <tbody>
        <% @shares.each do |share| %>
          <tr>
            <td><%= link_to share.content_url, share %></td>
            <td>
              <%= share.header_content %> â†’
              <%= link_to share.header_url %>
            </td>
            <td><%= share.impressionist_count %></td>
            <td><%= link_to 'Edit', edit_share_path(share) %></td>
          </tr>
        <% end %>
      </tbody>
    </table>

  <% end %>
</dif>