<div class="row">

  <h1>My links</h1>

  <% if @shares.empty? %>

    <p>You haven't shared anything yet.</p>

    <%= link_to "Share something!", new_share_path, class: :button %>

  <% else %>

    <table>
      <thead>
        <tr>
          <th>Shared URL</th>
          <th>Message</th>
          <th></th>
        </tr>
      </thead>

      <tbody>
        <% @shares.each do |share| %>
          <tr>
            <td><%= link_to share.content_url, "/#{share.id}", target: :blank %></td>
            <td>
              <%= share.header_content %> â†’
              <%= link_to share.header_url %>
            </td>
            <td><%= link_to 'Edit', edit_share_path(share) %></td>
          </tr>
        <% end %>
      </tbody>
    </table>

  <% end %>
</dif>