<html>
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <style type="text/css">
    header { background-color: <%= @share.header_background_color %>; }
    header, header a { color: <%= @share.header_text_color %>; }

    html, body {
      height: 100%;
    }
    body {
      margin: 0;
      padding: 0;
      font-family: 'Helvetica Neue', Helvetica, Arial, sans-serif;
      overflow: hidden;
    }
    header {
      padding: 8px 0;
      line-height: 18px;
      font-size: 14px;
      width: 100%;
      text-align: center;
    }
    header a {
      text-decoration: none;
    }
    header a:hover {
      text-decoration: underline;
    }
    .container {
      top: 0;
      bottom: 0;
      width: 100%;
      height: 100%;
      position: relative;
    }
    .container iframe {
      width: 100%;
      height: 100%;
    }
    .close {
      float: right;
      margin-right: 10px;
      margin-top: -2px;
    }
    a.close:hover {
      text-decoration: none;
    }
  </style>
</head>
<body>
  <header id="header">
    <a href="<%= header_share_path(@share) %>">
      <%= @share.header_content %>
    </a>
    <a href="<%= @original_content_url %>" title="Go to original article" class="close">&times;</a>
  </header>
  <article class="container">
    <iframe src="<%= @content_url %>" frameborder="0"></iframe>
  </article>
</body>
</html>