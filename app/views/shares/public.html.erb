<html>
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <style type="text/css">
    header { background-color: <%= @share.header_background_color %>; }
    header a { color: <%= @share.header_text_color %>; }

    body {
      margin: 0;
      padding: 0;
      font-family: 'Helvetica Neue', Helvetica, Arial, sans-serif;
    }
    header {
      height: 16px;
      width: 100%;
      text-align: center;
      padding: 8px 0;
      font-size: 12px;
      line-height: 16px;
    }
    header a {
      text-decoration: none;
      width: 100%;
      display: inline-block;
    }
    header a:hover {
      text-decoration: underline;
    }
    .container {
      width: 100%;
      position: fixed;
      top: 32px;
      bottom: 0;
    }
    .container iframe {
      width: 100%;
      height: 100%;
    }
  </style>
</head>
<body>
  <header id="header">
    <a href="<%= header_share_path(@share) %>">
      <%= @share.header_content %>
    </a>
  </header>
  <article class="container">
    <iframe src="<%= @content_url %>?utm_source=headsha.re&amp;utm_campaign=headsha.re&amp;utm_medium=headsha.re" frameborder="0"></iframe>
  </article>
</body>
</html>